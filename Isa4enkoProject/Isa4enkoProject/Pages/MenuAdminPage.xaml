<Page x:Class="Isa4enkoProject.Pages.MenuAdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Isa4enkoProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuAdminPage" Background="LightGray">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="1"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="1"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.RowSpan="3">
            <TextBlock FontSize="20" FontStyle="Oblique" FontWeight="Black" HorizontalAlignment="Center">Меню агента</TextBlock>
            <Button Content="Вакансии" x:Name="BtnVac" Click="BtnVac_Click"  ></Button>
            <Button Content="Работодатели" x:Name="BtnEmpl" Click="BtnEmpl_Click"  ></Button>
            <Button Content="Соискатели" x:Name="BtnApp" Click="BtnApp_Click"  ></Button>
            <Button x:Name="BtnExit" Click="Button_Click" >Выйти</Button>
        </StackPanel>
    </Grid>
</Page>
